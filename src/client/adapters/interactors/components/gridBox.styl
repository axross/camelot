.gridBox
  &__inner
    width 100%
    &__item
      width 100%
      margin-bottom 40px
      &--2col
        display inline-block
        width: calc((100% - 40px) / 2)
        margin-right 40px
        &:nth-child(2n)
          margin-right 0
        &:last-child
        &:nth-last-child(2)
          margin-bottom 0
